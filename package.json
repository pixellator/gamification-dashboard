{
  "name": "gamification-dashboard",
  "displayName": "Gamification and Inference Workflow Dashboard",
  "description": "Interactive dashboard for managing the Gamification and Inference Workflow (GIW) for scholarly research",
  "version": "1.0.0",
  "publisher": "uw-nifgp",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gamificationDashboard.showDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gamificationDashboard.showDashboard",
        "title": "Show Gamification Dashboard",
        "category": "Gamification"
      },
      {
        "command": "gamificationDashboard.newProject",
        "title": "New Gamification Project",
        "category": "Gamification"
      },
      {
        "command": "gamificationDashboard.openProject",
        "title": "Open Gamification Project",
        "category": "Gamification"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gamificationDashboard.showDashboard"
        },
        {
          "command": "gamificationDashboard.newProject"
        },
        {
          "command": "gamificationDashboard.openProject"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "gamificationDashboard",
          "name": "Gamification Dashboard",
          "when": "gamificationDashboard.enabled"
        }
      ]
    },
    "configuration": {
      "title": "Gamification Dashboard",
      "properties": {
        "gamificationDashboard.defaultProjectDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for gamification projects"
        },
        "gamificationDashboard.soluzionTextPath": {
          "type": "string",
          "default": "",
          "description": "Path to SOLUZION Text engine executable"
        },
        "gamificationDashboard.soluzionWebPath": {
          "type": "string",
          "default": "",
          "description": "Path to SOLUZION Web engine"
        },
        "gamificationDashboard.guidelinesRepository": {
          "type": "string",
          "default": "",
          "description": "Path to Repository of Guidelines directory"
        },
        "gamificationDashboard.sourceDocumentsDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for source documents (PDFs, papers, etc.)"
        },
        "gamificationDashboard.gameSpecificationsDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for game specification files"
        },
        "gamificationDashboard.gameImplementationsDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for game implementation files"
        },
        "gamificationDashboard.evaluationToolsDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for evaluation and analysis tools"
        },
        "gamificationDashboard.resultsDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory for game traces and results"
        },
        "gamificationDashboard.aiProvider": {
          "type": "string",
          "enum": [
            "anthropic",
            "google",
            "openai"
          ],
          "default": "google",
          "description": "AI provider to use for game generation (Anthropic Claude, Google Gemini, or OpenAI)"
        },
        "gamificationDashboard.aiModel": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "AI model to use. Examples: gemini-2.5-flash, gemini-1.5-pro, gemini-1.5-flash, claude-3-5-sonnet-20241022, gpt-4o"
        },
        "gamificationDashboard.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for Claude AI integration. Get your API key from https://console.anthropic.com/"
        },
        "gamificationDashboard.googleApiKey": {
          "type": "string",
          "default": "AIzaSyC1ybhlfXrOzL-lr_nTbHrJtPVCgUMPAeA",
          "description": "Google AI API key for Gemini integration. Get your API key from https://aistudio.google.com/apikey"
        },
        "gamificationDashboard.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for GPT integration. Get your API key from https://platform.openai.com/api-keys"
        },
        "gamificationDashboard.panelMode": {
          "type": "string",
          "enum": [
            "sidebar",
            "fullscreen"
          ],
          "default": "sidebar",
          "description": "Default panel display mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.5",
    "undici-types": "^7.16.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@google/genai": "^1.29.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "mime-types": "^3.0.1",
    "openai": "^6.7.0"
  }
}
